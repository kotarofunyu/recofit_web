<div class="wrapper">
    <div class="user_index">
        <h1>ユーザー一覧</h1>
        <ul>
            <% @users.each do |user| %>
            <li class="user">
                <div class="user_img">
                    <% if user.picture.present? %>
                    <%=link_to "/users/#{user.id}" do %>
                    <%= image_tag user.picture.url, class:"user_image" %>
                    <% end %>
                    <% else %>
                    <%= link_to "/users/#{user.id}" do %>
                    <%= image_tag ('noicon.png'), class:"user_image" %>
                    <% end %>
                    <% end %>
                </div>
                <div class="user_info">
                    <div class="name"><%= link_to user.name, "/users/#{user.id}/" %></div>
                    <div class="intro"><%=user.introduction %></div>
                </div>
                <div class="icons">
                    <%= link_to "/users/#{user.id}/" do %>
                    <%= icon("fas", "external-link-alt") %>
                    <% end %>
                </div>
            </li>
            <% end %>
        </ul>
    </div>
</div>